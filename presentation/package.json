{
  "name": "salt-slides",
  "version": "1.0.0",
  "scripts": {
    "sass": "node-sass ./style/ -o ./assets/css/",
    "sass-watch": "onchange './style/*.scss' -- npm run sass",
    "build": "mkdir -p dist && inliner --nocompress --inlinemin index.html > dist/${PWD##*/}.html"
  },
  "author": "",
  "dependencies": {
    "inliner": "^1.13.1",
    "reveal.js": "^3.6.0"
  },
  "devDependencies": {
    "node-sass": "^4.7.2",
    "onchange": "^3.3.0"
  }
}
